[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = cat
[include]
	path = .gitconfig.local
[user]
	useConfigOnly = true
[color]
	ui = auto
[color "diff"]
	old = 167 normal
	new = 030 normal
[color "status"]
	added = 030 normal
	deleted = 167 normal
	changed = 167 normal
	untracked = 167 normal
[alias]
	up = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	alias = !git config --global --list | grep --color=always \"alias\"
	count = !git log --oneline | wc -l
	s = status
	a = add --all
	d = diff
	refresh = !touch $(git rev-parse --git-dir)/hooks/tmp && rm -r $(git rev-parse --git-dir)/hooks/* && git init
	co = checkout
[ghq]
	root = ~/.ghq/src
[init]
	templatedir = ~/.git_template
[pager]
	log = less --no-init
	stash = false
[diff]
	compactionHeuristic = true
