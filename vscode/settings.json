{
    // What I want to do if possible...
    // - Kill active process executed by terminal when clicking "Kill Terminal" button and quitting VS Code
    //   - Workaround: turn on the option that confirms on exit
    // - Change modifier key of the option that follows link
    //   - I want to use cmd+click, but multi-cursor overlaps

    // security
    "security.workspace.trust.untrustedFiles": "open",

    // workbench
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    // editor
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,
    "editor.folding": true,
    "editor.foldingStrategy": "indentation",
    // https://github.com/microsoft/vscode/issues/54312#issuecomment-583654497
    "editor.rulers": [
        {
            "column": 120, // it is generally recommended that the line length does not exceed this value
            "color": "#252525"
        },
        {
            "column": 163, // this value is where the ruler just hides itself and the word wrapping occurs if the line length exceeds 160
            "color": "#ff4081"
        }
    ],

    // files
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "**/bin/src/currentshell/**/*": "shellscript",
        "**/developers-blog-content-ja/articles/**/*": "markdown", // workaround
        "*env*": "dotenv",
        "Schemafile": "ruby" // for Ridgepole
    },

    // terminal
    "terminal.integrated.scrollback": 100000,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Hack Nerd Font",

    // ruby
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "reek": {
            "useBundler": true
        }
    },
    "ruby.intellisense": "rubyLocate",
    "ruby.rubocop.useBundler": true,
    "ruby.rubocop.suppressRubocopWarnings": true,

    // python
    "python.showStartPage": false,

    // git
    "git.autofetch": true,

    "[markdown]": {
        "editor.tabSize": 4
    },
    "markdown.extension.list.indentationSize": "inherit",
    "workbench.colorTheme": "One Dark Pro",
    "git.autofetchPeriod": 3600

    // ignores trimming trailing space on Markdown for newline, but it is not recommended
    // "[markdown]": {
    //     "files.trimTrailingWhitespace": false
    // },

    // not classified yet
}
