{
    // What I want to do if possible...
    // - Kill active process executed by terminal when clicking "Kill Terminal" button and quitting VS Code
    //   - Workaround: turn on the option that confirms on exit
    // - Change modifier key of the option that follows link
    //   - I want to use cmd+click, but multi-cursor overlaps

    "workbench.startupEditor": "newUntitledFile",
    "editor.wordWrap": "on",
    "terminal.integrated.scrollback": 100000,
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 13,

    // Ruby extension preferences
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "reek": {
            "useBundler": true
        }
    },
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    // Ignores trimming trailing space on Markdown for newline, but it is not recommended
    // "[markdown]": {
    //     "files.trimTrailingWhitespace": false
    // },
    "files.associations": {
        "bashrc": "shellscript",
        "bash_profile": "shellscript",
        "**/bin/src/currentshell/**/*": "shellscript"
    },
    "window.zoomLevel": 0,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimFinalNewlines": true,
    "ruby.intellisense": "rubyLocate",
    "editor.cursorBlinking": "solid",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Hack Nerd Font",
    "editor.minimap.enabled": false,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "python.showStartPage": false
}
