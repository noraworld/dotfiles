{
    // What I want to do if possible...
    // - Kill active process executed by terminal when clicking "Kill Terminal" button and quitting VS Code
    //   - Workaround: turn on the option that confirms on exit
    // - Change modifier key of the option that follows link
    //   - I want to use cmd+click, but multi-cursor overlaps

    "security.workspace.trust.untrustedFiles": "open",

    "workbench.startupEditor": "newUntitledFile",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,
    "editor.folding": true,
    "editor.foldingStrategy": "indentation",
    // https://github.com/microsoft/vscode/issues/54312#issuecomment-583654497
    "editor.rulers": [

        {
            "column": 120, // it is generally recommended that the line length does not exceed this value
            "color": "#ffc31e66"
        },
        {
            "column": 160,
            "color": "#ff408144"
        }
    ],

    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.defaultLanguage": "markdown",
    "files.associations": {
        "**/bin/src/currentshell/**/*": "shellscript",
        "**/bin/src/zsh_completions/**/*": "shellscript",
        "**/bin/src/caution/**/*": "shellscript",
        "Schemafile": "ruby", // for Ridgepole
        "*.cron": "crontab"
    },

    "terminal.integrated.scrollback": 100000,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Hack Nerd Font",

    //   https://github.com/rubyide/vscode-ruby/blob/main/packages/vscode-ruby-client/README.md#example-initial-configuration
    //   https://github.com/rubyide/vscode-ruby/blob/330dcd2af212a336eba791ac0bd185f1c78042d7/packages/vscode-ruby-client/README.md#example-initial-configuration
    "ruby.useBundler": true,
    "window.zoomLevel": 0,
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "rubocop": {
            "useBundler": true,
            "except": ["Metrics"] // because it is annoying that it puts wavy lines to all lines in those methods
        }
    },
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",

    "python.showStartPage": false,
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnType": true
    },

    "git.autofetch": true,

    "[markdown]": {
        "editor.tabSize": 4,
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "markdown.extension.list.indentationSize": "inherit",
    "markdown.extension.print.absoluteImgPath": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "cSpell.enableFiletypes": [
        "ruby",
