{
    // What I want to do if possible...
    // - Kill active process executed by terminal when clicking "Kill Terminal" button and quitting VS Code
    //   - Workaround: turn on the option that confirms on exit
    // - Change modifier key of the option that follows link
    //   - I want to use cmd+click, but multi-cursor overlaps

    "workbench.startupEditor": "newUntitledFile",
    "editor.wordWrap": "on",
    "terminal.integrated.scrollback": 10000,
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 13,

    // Ruby extension preferences
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "reek": {
            "useBundler": true
        }
    },
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "bashrc": "shellscript",
        "bash_profile": "shellscript"
    },
    "window.zoomLevel": 0,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimFinalNewlines": true,
    "ruby.intellisense": "rubyLocate",
    "editor.cursorBlinking": "solid",
    "terminal.integrated.fontFamily": "Menlo, Hack Nerd Font"
}
