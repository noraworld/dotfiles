if [ "$(expr "$CURRENT_COMMAND" : '^[[:blank:]]*pip[[:blank:]]*')" -eq 0 ] &&
   [ "$(expr "$CURRENT_COMMAND" : '^[[:blank:]]*sudo[[:blank:]]*pip[[:blank:]]*')" -eq 0 ]
then
  \pip "$@"
  return $?
fi

case $1 in
  install)
    __alarm "pip install" "pipenv install --system" ""
    ;;
  *)
    command gem "$@"
    ;;
esac
