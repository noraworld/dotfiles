  darwin*)
    if [ -e ~/.shenvs/macos.sh ]; then
      . ~/.shenvs/macos.sh
    fi
  ;;
  linux*)
    if [ -e ~/.shenvs/linux.sh ]; then
      . ~/.shenvs/linux.sh
    fi
  ;;
esac

